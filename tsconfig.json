{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./types",
    "noEmit": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "module": "es6",
    "target": "es6",
    "strict": true,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": true,
    "rootDir": "."
  },
  "include": ["lib/browser.ts", "lib/node.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
